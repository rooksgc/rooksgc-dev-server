{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./build",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "src/types/*"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "exclude": ["node_modules", "build"],
  "include": ["src/**/*"]
}
