{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "target": "esnext",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "/*.test.tsx?"],
  "include": ["src"]
}
