{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "*": ["src/*"]
    },
    "rootDir": "src",
    "outDir": "build",
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "build"],
  "include": ["src"]
}
