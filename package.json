{
  "name": "rooksgc-dev-server",
  "version": "0.0.4",
  "description": "Express server for API calls",
  "repository": {
    "type": "git",
    "url": "https://github.com/rooksgc/rooksgc-dev-server"
  },
  "main": "src/index.ts",
  "scripts": {
    "start": "cross-env NODE_PATH=src NODE_ENV=production ts-node src/index.ts",
    "dev": "cross-env NODE_PATH=src NODE_ENV=development nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.test.ts' --exec ts-node src/index.ts",
    "test": "jest --passWithNoTests --watchAll=false --runInBand --forceExit --silent",
    "test:watch": "jest --passWithNoTests --watch --runInBand --forceExit --silent",
    "lint": "tsc --noEmit && eslint . --ext .js,.ts",
    "lint:fix": "tsc --noEmit && eslint . --fix --ext .js,.ts",
    "db:migrate:dev": "cross-env NODE_ENV=development sequelize-cli db:migrate",
    "db:migrate:prod": "cross-env NODE_ENV=production sequelize-cli db:migrate",
    "db:migrate:undo:all": "cross-env NODE_ENV=test sequelize-cli db:migrate:undo:all",
    "db:seeds:dev": "cross-env NODE_ENV=development sequelize-cli db:seed:all",
    "db:seeds:prod": "cross-env NODE_ENV=production sequelize-cli db:seed:all",
    "db:create": "sequelize-cli db:create",
    "db:g:seed": "sequelize-cli seed:generate --seed-name"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  },
  "author": "Shestakov Anton<rooksgc@gmail.com>",
  "license": "MIT",
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "endOfLine": "auto"
  },
  "jest": {
    "verbose": true,
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "node"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/config/"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base-typescript-prettier"
    ],
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "rules": {
      "prettier/prettier": "error",
      "camelcase": "off",
      "no-return-await": "off",
      "max-classes-per-file": "off",
      "consistent-return": "off",
      "import/no-dynamic-require": "off",
      "import/prefer-default-export": "off",
      "import/no-default-export": "error",
      "@typescript-eslint/no-var-requires": "off",
      "lines-between-class-members": "off"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "src"
          ]
        }
      }
    }
  },
  "eslintIgnore": [
    "/build/*",
    "/coverage/*",
    "**/*.d.ts",
    "/public/",
    "/src/types/",
    "*.spec.ts",
    "*.test.ts",
    "/src/tests/*",
    "/config/*"
  ],
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express-jwt": "^6.0.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/nodemailer": "^6.4.0",
    "bcryptjs": "^2.4.3",
    "cls-hooked": "^4.2.2",
    "compression": "^1.7.4",
    "config": "^3.3.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-validator": "^6.9.2",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.4.18",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.5.0",
    "sequelize-typescript": "^2.1.0",
    "socket.io": "^4.0.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.28",
    "@types/supertest": "^2.0.11",
    "cross-env": "^7.0.3",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base-typescript-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
