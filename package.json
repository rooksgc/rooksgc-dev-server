{
  "name": "rooksgc-dev-server",
  "version": "0.0.3",
  "description": "Express server for API calls",
  "repository": {
    "type": "git",
    "url": "https://github.com/rooksgc/rooksgc-dev-server"
  },
  "main": "src/index.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=production ts-node src/index.ts",
    "dev": "cross-env NODE_ENV=development nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.test.ts' --exec ts-node src/index.ts",
    "test": "jest --forceExit --coverage --verbose",
    "lint": "tsc --noEmit && eslint . --ext .js,.ts",
    "lint:fix": "tsc --noEmit && eslint . --fix --ext .js,.ts",
    "db:migrate:dev": "cross-env NODE_ENV=development sequelize-cli db:migrate",
    "db:migrate:prod": "cross-env NODE_ENV=production sequelize-cli db:migrate",
    "db:seeds:dev": "cross-env NODE_ENV=development sequelize-cli db:seed:all",
    "db:seeds:prod": "cross-env NODE_ENV=production sequelize-cli db:seed:all",
    "db:create": "sequelize-cli db:create",
    "db:g:seed": "sequelize-cli seed:generate --seed-name"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "author": "Shestakov Anton<rooksgc@gmail.com>",
  "license": "MIT",
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "endOfLine": "auto"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base-typescript-prettier"
    ],
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "rules": {
      "prettier/prettier": "error",
      "camelcase": 0,
      "no-return-await": 0,
      "max-classes-per-file": 0,
      "consistent-return": 0,
      "import/no-dynamic-require": 0,
      "@typescript-eslint/no-var-requires": 0,
      "lines-between-class-members": 0
    }
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express-jwt": "^6.0.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/nodemailer": "^6.4.0",
    "bcryptjs": "^2.4.3",
    "cls-hooked": "^4.2.2",
    "compression": "^1.7.4",
    "config": "^3.3.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-validator": "^6.9.2",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.4.18",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.5.0",
    "sequelize-typescript": "^2.1.0",
    "socket.io": "^4.0.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.28",
    "cross-env": "^7.0.3",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base-typescript-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "sequelize-cli": "^6.2.0",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
